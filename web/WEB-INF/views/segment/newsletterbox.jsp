    <div class="kl-pp-inner">
        <div class="nlbox--preview" style="background-image:url(${pageContext.request.contextPath}/resources/client/images/nlpreview.jpg);">
                <div class="nlbox-logo" style="background-image:url(${pageContext.request.contextPath}/resources/client/images/kallyas-logo.svg)"></div>
