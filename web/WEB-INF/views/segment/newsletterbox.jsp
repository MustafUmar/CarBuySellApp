                </form>	
                    <div id="notification_container"></div>
            </div>
                <!-- end newsletter-signup -->

            <p class="mt-10 mb-0 opacity7">
                    <small>You will recieve special offers via email.</small>
            </p>
        </div>
        <!-- /.vs-nlbox-inner -->
